<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners">

    <LinearLayout
        android:id="@+id/item_employee_ll_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_employee_tv_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_basex2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="preview" />

        <TextView
            android:id="@+id/item_employee_tv_position"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="preview" />

        <ImageView
            android:id="@+id/item_employee_iv_manager"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_manager"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>